{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Run",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--host", "0.0.0.0", "--port", "8001"],
      "jinja": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "purpose": ["debug-in-terminal"]
    },
    {
      "name": "Python: FastAPI Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "jinja": true,
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "autoReload": {
        "enable": true
      },
      "gevent": false
    }
  ]
}
